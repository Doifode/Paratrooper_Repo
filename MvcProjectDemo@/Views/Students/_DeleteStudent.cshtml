@model MvcProjectDemo_.Models.Student

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Student</h4>
        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2">Student ID:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Id)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Student Name:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Marks:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Marks)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">State:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.State)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">District:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.District)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Village:</label>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Villege)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
